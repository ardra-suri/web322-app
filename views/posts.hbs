<div class="row">
    <div class="col-md-12">
        <h2><a href="/posts/add" class="btn btn-success pull-right">Add Post</a></h2>
        <table class="table">
            <thead>
                <th>Post ID</th>
                <th>Title</th>
                <th>Post Date</th>
                <th>Category</th>
                <th>Published</th>
                <th></th>
            </thead>
            {{#each posts}}
            <tr>
                <td>{{id}}</td>
                <td>{{title}}</td>
                <td>{{postDate}}</td>
                <td><a href="/posts?category={{category}}">{{category}}</a></td>
                <td>{{published}}</td>
                <td><a href="/posts/delete/{{id}}" class="list-group-item">Remove</a></td>
            </tr>
            {{/each}}
        </table>
        {{#unless posts}}

        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
        {{/unless}}

    </div>
</div>